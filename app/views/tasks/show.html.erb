<div class="container">
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Edit task", edit_task_path, class:"btn btn-primary" %>
<%= link_to "Delete #{@task.title}", task_path(@task), class:"btn btn-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Back to the tasks", tasks_path, class:"btn btn-secondary" %>

</div>
