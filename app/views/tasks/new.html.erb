<div class="container">
<h1>Add new task:</h1>
<%= form_for @task, :html => {:class => "form-horizontal center"} do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :details, "Describe:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :details, class: "form-control" %>
        </div>
      </div>
      <div class="checkbox">
        <%= f.check_box :completed %> Task completed ?
      </div>
      <%= f.submit "Submit", class: "btn btn-default btn-primary btn-submit" %>  
 <% end %>
</div>
